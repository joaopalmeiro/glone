[flake8]
max-line-length = 88
# Extend the default ignore list
extend-ignore =
    # Whitespace before ':'
    E203,
    # Line break before binary operator
    W503,
    # Disable to avoid duplicate warnings with E722
    B001
per-file-ignores =
    # `module` imported but unused
    __init__.py: F401
select =
    # Default
    E,
    F,
    W,
    C90,
    # flake8-bugbear
    B,
    # flake8-comprehensions
    C4,
    # pep8-naming
    N8,
    # flake8-builtins
    A00
